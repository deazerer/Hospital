<Window x:Class="Hospital.Windows.Extract"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hospital.Windows"
        mc:Ignorable="d"
        Title="Extract" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Страница с выписками" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center"></TextBlock>
            <DataGrid AutoGenerateColumns="False" x:Name="extractGrid" IsReadOnly="True" HorizontalAlignment="Center" VerticalScrollBarVisibility="Hidden">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Дата выписки" Binding="{Binding extractDate}" Width="*"></DataGridTextColumn>
                    <DataGridTextColumn Header="Причина выписки" Binding="{Binding extractReason}" Width="*"></DataGridTextColumn>
                    <DataGridTextColumn Header="Медкарта" Binding="{Binding medicalCardId}" Width="*"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
            <Button x:Name="BackBtn" Content="Вернуться назад" FontSize="25" FontWeight="Bold" Background="#fac716" Click="BackBtn_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
